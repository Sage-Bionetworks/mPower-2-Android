<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_medium"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/appAlertRed"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:layout_gravity="center"
            app:srcCompat="@drawable/medication_remove"/>

        <Button
            style="@style/Research.ImageButton"
            android:id="@+id/medication_remove_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:paddingTop="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_medium"
            android:background="@drawable/rs2_cancel_icon"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/task_container"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_container">

        <TextView
            android:id="@+id/medication_remove_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appDarkGrey"
            android:textSize="22sp"
            android:fontFamily="@font/lato_bold"
            android:layout_margin="5dp"
            android:gravity="center"
            android:paddingTop="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/medication_remove_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appDarkGrey"
            android:textSize="16sp"
            android:text="@string/medication_day_selection_message"
            android:fontFamily="@font/lato"
            android:layout_margin="5dp"
            android:gravity="center"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/appWhite">
        <Button
            android:id="@+id/medication_remove_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mp_rounded_button_height"
            android:text="@string/medication_remove_button"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/MPower.RoundedCornerMaterialButton"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>