<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/rsb_padding_large">

    <TextView
        style="@style/TextAppearance.MP.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/when_do_you_want_a_reminder" />

    <Button
        style="@style/MPower.RoundedCornerMaterialButton"
        android:id="@+id/remind_me_in_2_hours_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_rounded_button_height"
        android:text="@string/remind_me_in_2_hours"
        android:layout_marginTop="@dimen/rsb_padding_large"/>

    <Button
        style="@style/MPower.RoundedCornerMaterialButton"
        android:id="@+id/remind_me_in_1_hour_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_rounded_button_height"
        android:text="@string/remind_me_in_1_hour"
        android:layout_marginTop="@dimen/rsb_padding_large"/>

    <Button
        style="@style/MPower.RoundedCornerMaterialButton"
        android:id="@+id/remind_me_in_15_minutes_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_rounded_button_height"
        android:text="@string/remind_me_in_15_minutes"
        android:layout_marginTop="@dimen/rsb_padding_large"/>

    <Button
        style="@style/MP.ImageButton"
        android:id="@+id/do_not_remind_me_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_rounded_button_height"
        android:text="@string/do_not_remind_me"
        android:textColor="@color/sageResearchPrimary"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/rsb_padding_large"/>

</LinearLayout>