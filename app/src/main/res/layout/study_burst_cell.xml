<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/study_burst_cell_height"
    android:layout_margin="4dp">
    <TextView
        android:id="@+id/cell_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rsb_red"
        android:textSize="16dp"/>
    <ImageView
        android:id="@+id/cell_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/walk_and_balance_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/cell_number"
        android:layout_above="@id/cell_message"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/cell_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:fontFamily="@font/lato"/>
    <TextView
        android:id="@+id/cell_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cell_details"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/lato_bold"/>

</RelativeLayout>