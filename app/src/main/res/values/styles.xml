<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royal500</item>
        <item name="colorPrimaryDark">@color/royal600</item>
        <item name="colorAccent">@color/butterscotch500</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.MPower.TextView.TrackingMenu" parent="">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/royal400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MPower.TextView.UnderlinedButton"
        parent="Research.TextButton">
        <item name="android:textColor">@color/royal500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MPower.TextView.SelectionSectionTitle" parent="">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.MPower.TextView.SelectionItemTitle" parent="">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MPower.TextView.SelectionDetail" parent="">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appLightGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MPower.ActionButton.TriggersLogging.UnderlinedButton" parent="">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/royal500</item>
    </style>

    <style name="MPower.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/mp_rounded_button_butterscotch</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="MPower.RoundedCornerMaterialButton.Gray" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/mp_rounded_button_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MPowerTextAppearance.StatusWheel.DayCount" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MPowerTextAppearance.StatusWheel.DayLabel" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MpChevronFullWidthButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAppearance">@style/MPowerTextAppearance </item>
        <item name="android:textAlignment"> textStart </item>
        <item name="android:textSize"> 24sp </item>
        <item name="android:paddingLeft">36sp </item>
        <item name="android:drawableRight">@drawable/ic_chevron_right_black_24dp </item>
    </style>

</resources>
