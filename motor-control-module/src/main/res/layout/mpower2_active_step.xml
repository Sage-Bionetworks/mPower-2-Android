<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rs2_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/royal600"
    android:padding="0dp"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@id/rs2_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:alpha=".3"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/f_walking1" />

    <org.sagebionetworks.research.mobile_ui.widget.NavigationActionBar
        android:id="@id/rs2_step_navigation_action_bar"
        style="@style/Widget.ResearchStack.NavigationActionBar.Active"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:isShadowHidden="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <org.sagebionetworks.research.mobile_ui.widget.ActionButton
        android:id="@+id/rs2_step_navigation_action_cancel"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rs2_cancel_icon"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/beginLabel"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Turn around and then stand still"
        android:textColor="@color/appWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rs2_step_navigation_action_cancel" />

    <ProgressBar
        android:id="@+id/countdownDial"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/countdown_dial_background"
        android:max="100"
        android:progress="60"
        android:progressDrawable="@drawable/countdown_dial"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/rs2_step_navigation_action_bar"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintHeight_max="250dp"
        app:layout_constraintHeight_min="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beginLabel"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintWidth_min="150dp" />

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_light"
        android:gravity="center"
        android:padding="0dp"
        android:text="15"
        android:textColor="@color/appWhite"
        android:textSize="80sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/countdownDial"
        app:layout_constraintEnd_toStartOf="@+id/countdownDial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/countdownDial"
        app:layout_constraintTop_toBottomOf="@+id/countdownDial"
        app:layout_constraintVertical_bias=".55" />

    <TextView
        android:id="@+id/unitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="Seconds"
        android:textAllCaps="true"
        android:textColor="@color/appWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/countdownDial"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/countdownDial"
        app:layout_constraintTop_toBottomOf="@+id/countLabel" />

</android.support.constraint.ConstraintLayout>