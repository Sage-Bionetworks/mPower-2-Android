<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bp_submit_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/white"
    android:minHeight="@dimen/rsb_item_size_submit_bar">

    <Button
        android:id="@+id/bar_submit_postitive"
        style="@style/MP.ButterScotch.RoundedCornerMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mp_rounded_button_height"
        android:layout_margin="16dp"
        android:text="@string/rsb_BUTTON_NEXT"/>

    <Button
        android:id="@+id/bar_submit_negative"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rsb_padding_medium"
        android:textAllCaps="false"
        android:textColor="@color/royal500"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>