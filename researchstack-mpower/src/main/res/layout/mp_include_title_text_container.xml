<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mp_text_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/rsb_padding_medium"
    android:orientation="vertical"
    android:background="@color/sageResearchPrimary">

    <TextView
        android:id="@+id/bp_text_container_title"
        style="@style/TextAppearance.MP.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_margin="@dimen/rsb_padding_small"/>

    <TextView
        android:id="@+id/bp_text_container_text"
        style="@style/TextAppearance.MP.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/rsb_padding_small"/>

</LinearLayout>