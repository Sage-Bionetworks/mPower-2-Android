<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/rsb_margin_right"
    android:layout_marginRight="@dimen/rsb_margin_right">

    <EditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/rsb_padding_medium"
        android:paddingBottom="@dimen/rsb_padding_medium"
        android:layout_margin="@dimen/rsb_padding_large"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:minHeight="@dimen/rsb_item_size_default"
        android:maxLines="1"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        app:backgroundTint="@color/royal500"/>

</LinearLayout>
