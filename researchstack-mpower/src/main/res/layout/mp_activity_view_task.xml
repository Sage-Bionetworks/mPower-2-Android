<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bp_onboarding_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <org.researchstack.backbone.ui.views.StepSwitcher
        android:id="@+id/bp_step_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bp_toolbar_container" />

    <LinearLayout
        android:id="@id/bp_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <org.sagebionetworks.research.mpower.researchstack.framework.step.toolbar.MpTaskToolbar
            style="@style/Widget.BP.Toolbar.Transparent"
            android:id="@+id/bp_task_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mp_toolbar_background"/>

        <!-- 0 width and height so that toolbar still works, but this view is hidden -->
        <TextView
            android:id="@+id/bp_step_progress_textview"
            style="@style/TextAppearance.MP.TaskStepProgress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>